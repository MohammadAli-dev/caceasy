# packages/admin/Dockerfile (replace existing)
FROM node:18-alpine AS builder
WORKDIR /app
# install deps
COPY packages/admin/package*.json ./
RUN npm install --production=false --silent
# copy rest
COPY packages/admin/ ./
# build using standalone output
ENV NEXT_PRIVATE_TARGET=server
RUN npm run build

# runtime image
FROM node:18-alpine AS runner
WORKDIR /app
ENV NODE_ENV=production
# copy only what we need
COPY --from=builder /app/.next/standalone ./
COPY --from=builder /app/.next/static ./.next/static
# copy public if exists
COPY --from=builder /app/public ./public
EXPOSE 3001
# Use the standalone start script generated by Next
CMD ["node", "server.js"]
